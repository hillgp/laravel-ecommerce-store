{
    "name": "laravel-ecommerce/store",
    "description": "Laravel E-commerce Store Package - Complete online store solution",
    "type": "laravel-package",
    "license": "MIT",
    "authors": [
        {
            "name": "Laravel E-commerce Team",
            "email": "team@laravel-ecommerce.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10",
        "laravel/ui": "^4.5",
        "laravel/sanctum": "^4.0",
        "spatie/laravel-permission": "^6.10",
        "gateway-pagamentos/laravel": "@dev",
        "intervention/image": "^2.7",
        "spatie/laravel-sluggable": "^3.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6",
        "laravel/pint": "^1.15",
        "nunomaduro/collision": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "LaravelEcommerce\\Store\\": "src/",
            "LaravelEcommerce\\Store\\Database\\Factories\\": "database/factories/",
            "LaravelEcommerce\\Store\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelEcommerce\\Store\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelEcommerce\\Store\\StoreServiceProvider"
            ],
            "aliases": {
                "Store": "LaravelEcommerce\\Store\\Facades\\Store"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}